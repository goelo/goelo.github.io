---
// Hero component matching the exact specifications from image.html lines 57-67
export interface Props {
  title?: string;
  subtitle?: string;
  primaryButtonText?: string;
  secondaryButtonText?: string;
  primaryButtonHref?: string;
  secondaryButtonHref?: string;
}

const {
  title = "AI 产品指南针",
  subtitle = "提供深度、公正的 AI 产品评测，并通过动态时间轴，为你记录 AI 技术的每一次进化。",
  primaryButtonText = "浏览最新评测",
  secondaryButtonText = "探索 AI 进化史 →",
  primaryButtonHref = "#featured-content",
  secondaryButtonHref = "#timeline"
} = Astro.props;
---

<style>
  .hero-bg {
    background-image: url('https://images.unsplash.com/photo-1620712943543-2858200f7426?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
    background-size: cover;
    background-position: center;
  }
</style>

<section class="hero-bg relative text-white py-32 md:py-48 text-center">
  <!-- Black overlay with opacity-60 -->
  <div class="absolute inset-0 bg-black opacity-60"></div>

  <!-- Centered content with container mx-auto px-4 -->
  <div class="container mx-auto px-4 relative z-10">
    <!-- Large heading with 4xl md:text-6xl -->
    <h1 class="text-4xl md:text-6xl font-bold mb-4">{title}</h1>

    <!-- Subtitle paragraph with max-width -->
    <p class="text-lg md:text-xl max-w-3xl mx-auto mb-8">{subtitle}</p>

    <!-- Two call-to-action buttons with transform hover effects -->
    <div class="flex flex-col sm:flex-row justify-center items-center gap-6">
      <!-- Indigo primary button -->
      <a
        class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-4 px-10 rounded-lg transition duration-300 text-lg shadow-lg transform hover:scale-105"
        href={primaryButtonHref}
      >
        {primaryButtonText}
      </a>

      <!-- Transparent secondary button -->
      <a
        class="bg-transparent border-2 border-slate-300 hover:bg-slate-700 text-slate-100 font-bold py-4 px-10 rounded-lg transition duration-300 text-lg transform hover:scale-105"
        href={secondaryButtonHref}
      >
        {secondaryButtonText}
      </a>
    </div>
  </div>
</section>