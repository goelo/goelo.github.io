---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Astro Project', description = 'Built with Astro, Tailwind CSS, and Alpine.js' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts for Noto Sans SC -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <title>{title}</title>
  </head>

  <body class="bg-dark-bg text-dark-text-primary font-sans antialiased">
    <div id="app" class="min-h-screen">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Noto Sans SC', 'Inter', system-ui, sans-serif;
  }

  /* Custom scrollbar for dark theme */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #161b22;
  }

  ::-webkit-scrollbar-thumb {
    background: #30363d;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #484f58;
  }

  /* Smooth transitions */
  * {
    transition: color 0.2s ease, background-color 0.2s ease, border-color 0.2s ease;
  }
</style>
